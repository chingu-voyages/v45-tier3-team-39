{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["../.eslintrc.json", "plugin:react/recommended"],
  "plugins": ["react"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["node_modules/**", "dist/*", "build/*"]
}
